<h1>Book Categories</h1>


<table id="table_users" class="datatable-wide table table-striped table-bordered">
  <thead>
  <tr>
    <th>Title </th>
    <th>Description </th>

  </tr>
  </thead>
  <tbody>
  <% for book_category in @book_categories %>
    <td><%= link_to book_category.title, book_category %></td>
    <td><%= link_to book_category.description, book_category %></td>
    <% if current_user.is_admin? %>
    <td><%= link_to 'Edit', edit_book_category_path(book_category) %></td>
  <td><%= link_to 'Destroy', book_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %> 


    </tr>
  <% end %>
  </tbody>
</table>