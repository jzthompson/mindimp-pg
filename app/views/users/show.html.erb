<h1><%= @user.first_name + " " + @user.last_name %></h1>




  <p id="notice"><%= notice %></p>

  <dl id="user_info" class="dl-horizontal span2">
    <div class="well">
    
    <dt>First Name</dt>
    <dd><%= @user.first_name %></dd>
    
    <dt>Last Name</dt>
    <dd><%= @user.last_name %></dd>
    
    <dt>Nickname</dt>
    <dd><%= !@user.nick_name.blank? ? @user.nick_name : "(none)" %></dd>
    
    <dt>Email</dt>
    <dd><%= @user.email %></dd>
    
    <dt>Age</dt>
    <dd><%= @user.age %></dd>

    <dt>Administrator</dt>
    <dd><%= @user.is_admin %></dd>

    </div>
  </dl>



<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
